<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_battle"
    tools:context="com.bbp.crashtower.BattleActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/dfsffsf">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            >

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="5"
            app:layout_constraintBottom_toBottomOf="@+id/activity_battle"
            app:layout_constraintLeft_toLeftOf="@+id/activity_battle"
            app:layout_constraintRight_toRightOf="@+id/activity_battle"
            app:layout_constraintTop_toTopOf="@+id/activity_battle"
            android:gravity="center">

            <Button
                android:id="@+id/btn_battle_card_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Btn1"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/btn_battle_card_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Btn2"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/btn_battle_card_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Btn3"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/btn_battle_card_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Btn4"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btn_battle_card_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Btn5"
                android:layout_weight="1"
                />

        </LinearLayout>

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.constraint.ConstraintLayout>
