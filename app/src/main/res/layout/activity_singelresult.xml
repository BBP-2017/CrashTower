<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scaleType="centerInside">

    <ImageView
        android:id="@+id/resultCrown2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="153dp"
        android:layout_marginRight="153dp"
        android:layout_marginTop="21dp"
        android:scaleType="centerInside"
        app:layout_constraintRight_toLeftOf="@+id/resultCrown3"
        app:layout_constraintTop_toBottomOf="@+id/resultCrown1"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/resultCrown1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:scaleType="centerInside"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/resultCrown3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="21dp"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toRightOf="@+id/resultCrown1"
        app:layout_constraintTop_toBottomOf="@+id/resultCrown1"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/tvResult01"
        android:layout_width="224dp"
        android:layout_height="136dp"
        android:layout_marginBottom="185dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <ProgressBar
        android:id="@+id/Exbar01"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="227dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:max="100"
        android:progress="0"
        android:secondaryProgress="0"
        app:layout_constraintBottom_toTopOf="@+id/tvResult01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultCrown2"
        app:layout_constraintVertical_bias="0.74"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>